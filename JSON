				<div class="col-md-12">
					<h3>JSON Object</h3>
			&nbsp;&nbsp;var empObj ={<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;"employees":<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;[<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{"firstName":"Star", "lastName":"Rose"}, <br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{"firstName":"Riley", "lastName":"Reeves"},<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{"firstName":"Reagan", "lastName":"Reeves"}<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;]<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;}<br/>

					<h3>JSON String</h3>
			&nbsp;&nbsp;var empTxt ='{ "employees" : [' +<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;'{ "firstName":"Star" , "lastName":"Rose" },' +<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;'{ "firstName":"Riley" , "lastName":"Reeves" },' +<br/>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;'{ "firstName":"Reagan" , "lastName":"Reeves" } ]}';<br/>
					<br/>
					
					<h3>JSON Object without Conversion</h3>
			&nbsp;&nbsp;document.getElementById("rawObjOut").innerHTML =<br/>
			&nbsp;&nbsp;empObj.employees[1].firstName + " " + empObj.employees[1].lastName;<br/>

					<p id="rawObjOut"></p>	

					<script>
						document.getElementById("rawObjOut").innerHTML =
						empObj.employees[1].firstName + " " + empObj.employees[1].lastName;
					</script>

					<h3>JSON String to Object</h3>
			&nbsp;&nbsp;var obj = JSON.parse(empTxt);<br/>
			&nbsp;&nbsp;document.getElementById("jsonToObject").innerHTML =<br/>
			&nbsp;&nbsp;obj.employees[1].firstName + " " + obj.employees[1].lastName;<br/>

					<p id="jsonToObject"></p>

					<script>
						var obj = JSON.parse(empTxt);
						document.getElementById("jsonToObject").innerHTML =
						obj.employees[1].firstName + " " + obj.employees[1].lastName;
					</script>
					
					<h3>JSON Object to String</h3>
			&nbsp;&nbsp;var text = JSON.stringify(obj);<br/>
			&nbsp;&nbsp;document.getElementById("jsonToString").innerHTML = text;<br/>		

					<p id="jsonToString"></p>

					<script>
						var text = JSON.stringify(obj);
						document.getElementById("jsonToString").innerHTML = text;	
					</script>
					
